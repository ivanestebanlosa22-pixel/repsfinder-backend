generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

////////////////////
// ENUMS
////////////////////

enum PriceTier {
  LOW
  MEDIUM
  HIGH
}

enum ActivityStatus {
  ACTIVE
  INACTIVE
  UNKNOWN
}

////////////////////
// MODELS
////////////////////

model User {
  id        Int             @id @default(autoincrement())
  email     String          @unique
  password  String
  createdAt DateTime        @default(now())

  progress  UserProgress[]  // ðŸ‘ˆ progreso aprender
}

model Lesson {
  id        Int             @id @default(autoincrement())
  slug      String          @unique   // ej: "intro", "quality", "scams"
  title     String
  order     Int
  createdAt DateTime        @default(now())

  progress  UserProgress[]
}

model UserProgress {
  id        Int      @id @default(autoincrement())
  userId    Int
  lessonId  Int
  completed Boolean @default(false)
  updatedAt DateTime @updatedAt

  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)
  lesson Lesson @relation(fields: [lessonId], references: [id], onDelete: Cascade)

  @@unique([userId, lessonId]) // ðŸ‘ˆ una lecciÃ³n por usuario
}

model Category {
  id     Int     @id @default(autoincrement())
  name   String  @unique
  stores Store[]
}

model Store {
  id              Int              @id @default(autoincrement())
  name            String
  alias           String?
  platform        String
  url             String
  categoryId      Int
  category        Category         @relation(fields: [categoryId], references: [id])
  priceTier       PriceTier
  activityStatus  ActivityStatus
  reputationScore Float
  lastCheckedAt   DateTime         @default(now())
  signals         ReputationSignal[]

  createdAt       DateTime         @default(now())
  updatedAt       DateTime         @updatedAt
}

model ReputationSignal {
  id         Int      @id @default(autoincrement())
  storeId    Int
  store      Store    @relation(fields: [storeId], references: [id])
  sourceType String
  sourceUrl  String
  sourceDate DateTime @default(now())
  signalKind String
  evidence   String?

  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
}
